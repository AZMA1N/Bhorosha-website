// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  phone     String?  @unique
  email     String?  @unique
  role      String   @default("LANDOWNER") // Enum replaced with String for SQLite
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lands     Land[]
}

model Land {
  id          String   @id @default(uuid())
  district    String
  thana       String
  mouza       String
  size        Float
  unit        String
  status      String   @default("PENDING") // Enum replaced with String for SQLite
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Expert {
  id        String     @id @default(uuid())
  name      String
  type      String     // Enum replaced with String for SQLite
  assigned  Int        @default(0)
}
